{
  "instance_id": "mymachine",
  "machine_check": {
    "metric": "cpuidle",
    "hold": "60",
    "up": {
      "threshold": "30",
      "condition": "<"
    },
    "down": {
      "threshold": "70",
      "condition": ">"
    },
    "zk_path": "localhost:2181/nerve/services/awesome_service/machines"
  },
  "service_checks": {
    "your_http_service": {
      "port": 3000,
      "host": "127.0.0.1",
      "zk_path": "localhost:2181/nerve/services/your_http_service/services",
      "check_interval": 2,
      "checks": [
        {
          "type": "http",
          "uri": "/health",
          "timeout": 0.2,
          "rise": 3,
          "fall": 2
        }
      ]
    },
    "your_tcp_service": {
      "port": 6379,
      "host": "127.0.0.1",
      "zk_path": "localhost:2181/nerve/services/your_tcp_service/services",
      "check_interval": 2,
      "checks": [
        {
          "type": "tcp",
          "timeout": 0.2,
          "rise": 3,
          "fall": 2
        }
      ]
    }
  }
}
